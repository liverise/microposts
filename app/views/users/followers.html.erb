<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Followers (<%= @followers.count %>)</h3>
        <ol class="follower_users">
          <ul>
            <% @followers.each do |u| %>
            <%= gravatar_for @user, size: 50 %>
            <%= u.name %>
            <% end %>
          </ul>
        </ol>
  </div>
</div>
